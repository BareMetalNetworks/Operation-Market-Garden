<p id="notice"><%= notice %></p>

<h1>Plants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Variety</th>
      <th>Feeder</th>
      <th>Days to maturity</th>
      <th>Season</th>
      <th>Family</th>
      <th>Notes</th>
      <th>Price</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.variety %></td>
        <td><%= plant.feeder %></td>
        <td><%= plant.days_to_maturity %></td>
        <td><%= plant.season %></td>
        <td><%= plant.family %></td>
        <td><%= plant.notes %></td>
        <td><%= plant.price %></td>
        <td><%= plant.unit %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

